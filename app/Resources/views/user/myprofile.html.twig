{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% if user.image != null %}
                    <img style="border-radius: 50%; display: block;"src="{{ asset('uploads/images/user/') ~ app.user.image }}" alt="" width="230" height="230"/>
                {% else %}
                <img style="border-radius: 50%; display: block;"src="{{ asset('avatar.png') }}" alt="" width="230" height="230"/>
                {% endif %}
            </div>
            <div class="col-md-9">
                <form enctype="multipart/form-data" method="post" action="{{ path('my_profile_process') }}" >
                    <fieldset>
                    <legend>Edit Form</legend>
                    <div class="form-group">
                        <label class="col-sm-12 control-label" for="user_email">Email</label>
                        <div class="col-sm-12 ">
                            <input class="form-control" id="user_email" placeholder="Email" name="user[email]" value="{{ user.email }}"required type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12 control-label" for="user_fullName">Full Name</label>
                        <div class="col-sm-12 ">
                            <input type="text" class="form-control" id="user_fullName" placeholder="Full Name"value="{{ user.fullName }}" name="user[fullName]" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-12 control-label" for="user_age">Age</label>
                        <div class="col-sm-12 ">
                            <input type="text" class="form-control" id="user_age" placeholder="age" name="user[age]" value="{{ user.age }}" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-12 control-label" for="user_sex">Sex</label>
                        <div class="col-sm-12">
                            <select class="form-control" id="user_sex" name="user[sex]" required>
                                <option value="male" {% if user.sex == 'male'  %} selected {% endif %}>Male</option>
                                <option value="female" {% if user.sex == 'female'  %} selected {% endif %}>Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12 control-label" for="destination_image">Avatar</label>
                        <div class="col-sm-12 ">
                            <input type="file" class="form-control" id="destination_image" placeholder="upload image" name="user[image]" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12 control-label" for="user_password_first">Password</label>
                        <div class="col-sm-12">
                            <input type="password" class="form-control" id="user_password_first" placeholder="Password" name="user[password][first]" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12 control-label" for="user_password_second">Confirm Password</label>
                        <div class="col-sm-12">
                            <input type="password" class="form-control" id="user_password_second" placeholder="Password" name="user[password][second]" >
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12 col-sm-offset-4 mr-auto">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Edit Profile</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
                </form>

            </div>
        </div>
    </div>
{% endblock %}

