{% extends 'base.html.twig' %}

{% block title %}
    All User
{% endblock %}

{% block main %}
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for user in users %}
                    <div class="col-md-3">
                        <a href="{{ path('user_profile', {id:user.id} ) }}">
                            <div class="card mb-4 box-shadow">
                                <a href="{{ path('user_profile', {id:user.id} ) }}">
                                    <img style="border-radius: 50%; border: 1px solid #5eb5e0; "class="card-img-top" src="{{ asset('uploads/images/user/') ~ user.image }}" alt="user image">
                                </a>

                                <div class="card-body">
                                    <h5 class="m-2" >{{ user.fullName }}</h5><br/>
                                    <div class="d-flex justify-content-between align-items-center">

                                        <div class="btn-group">
                                            <a href="{{ path('user_profile', {id:user.id} ) }}" class="btn btn-sm btn-outline-secondary">Send Message</a>
                                            <a href="{{ path('user_profile', {id:user.id} ) }}" class="btn btn-sm btn-outline-secondary">Add Friend</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>


                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}

