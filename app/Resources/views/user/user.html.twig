{% extends 'base.html.twig' %}

{% block title %}
    {{ user.fullName|capitalize }}
{% endblock %}

{% block page_title %}View User{% endblock %}

 {% block page_button %}
     <a href="{{ path('mailbox_new', {id:user.id})  }}"  class="btn btn-sm btn-outline-secondary">Send Message</a>
     {% if user.friends|filter( v => v.myUser.getId == app.user.getId )|length == 0 and user.id != app.user.getId%}
        <a href="{{ path('user_friend_invite', {id:user.id})  }}" class="btn btn-sm btn-outline-secondary" >Add Friend</a>
     {% endif %}
 {% endblock %}


{% block main %}

<div class="container">

    <div class="container col-12 ">
            <div class="row m-auto col-12">
                {% set bgavatar = asset('uploads/images/user/') ~ user.image %}
                <div class="avatar img-thumbnail card-img-top" style="background: url('{{ bgavatar }}') no-repeat center; background-size: cover; display: block;  height: 400px; " >
                </div>
{#                <img  alt="" class="m-auto img-thumbnail  " src="{{ asset('uploads/images/user/' ~ user.image) }}" width="600"/>#}
            </div>

        </div>

        <div class="container col-12 ">
            <div class="row m-auto offset-4 ">
                <div class="col-4 a-c">
                    <h5>Name: {{ user.fullName }}</h5>
                </div>

                <div class="col-4">
                    <h3 >age: {{ user.age }}</h3>
                </div>

                <div class="col-4">
                    <h3>Sex: {{ user.sex }}</h3>
                </div>
            </div>

        </div>



</div>
{% endblock %}

